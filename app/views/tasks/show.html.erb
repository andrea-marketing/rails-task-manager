<h1> <%=@task.title %></h1>
<p><%=@task.details %></p>
<p> <%= @task.completed ? "This task is completed!" : "This task is not completed yet" %> </p>
<p> <%= link_to link_to ("<i class='fa-solid fa-arrow-left'></i> Back to list").html_safe, tasks_path %> </p>

<%= link_to ("<i class='fa-solid fa-trash-can'></i> Delete").html_safe,
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

<%= link_to ("<i class='fa-solid fa-pen-to-square'></i> Edit").html_safe,
            edit_path(@task)%>
